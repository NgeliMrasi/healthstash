{
  "version": 2,
  "builds": [
    {
      "src": "src/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/stellar/demo-account",
      "methods": ["GET"],
      "dest": "src/app.js"
    },
    {
      "src": "/stellar/issue-asset",
      "methods": ["POST"],
      "dest": "src/app.js"
    },
    {
      "src": "/stellar/demo-account-with-token",
      "methods": ["POST"],
      "dest": "src/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "src/app.js"
    }
  ],
  "env": {
    "ISSUER_SECRET": "YOUR_STELLAR_SECRET_STARTING_WITH_S",
    "HORIZON_URL": "https://horizon-testnet.stellar.org",
    "PORT": "3000"
  }
}
